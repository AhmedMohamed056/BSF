<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/page_color"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".DeleteFragment">

    <ImageView
        android:id="@+id/delete_benef_back"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:paddingVertical="2dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/back_ic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/delete_benef_details_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Beneficiary details "
        android:textSize="22sp"
        android:layout_marginStart="5dp"
        android:textColor="@color/light_black"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/delete_benef_back"
        app:layout_constraintStart_toStartOf="@+id/delete_benef_back"/>
    <TextView
        android:id="@+id/delete_benef_name_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Beneficiary name"
        android:textSize="18sp"
        android:textColor="@color/light_black"
        android:layout_marginTop="25dp"
        app:layout_constraintStart_toStartOf="@+id/delete_benef_back"
        app:layout_constraintTop_toBottomOf="@+id/delete_benef_details_tv"
        />
    <TextView
        android:id="@+id/delete_benef_name_tv"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/rounded_et"
        android:paddingStart="16dp"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/delete_benef_name_txt"
        app:layout_constraintTop_toBottomOf="@+id/delete_benef_name_txt" />
    <TextView
        android:id="@+id/delete_benef_bank_name_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bank name"
        android:textSize="18sp"
        android:textColor="@color/light_black"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="@+id/delete_benef_name_tv"
        app:layout_constraintTop_toBottomOf="@+id/delete_benef_name_tv"
        />
    <TextView
        android:id="@+id/delete_benef_bank_name_tv"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/rounded_et"
        android:paddingStart="16dp"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/delete_benef_bank_name_txt"
        app:layout_constraintTop_toBottomOf="@+id/delete_benef_bank_name_txt" />
    <TextView
        android:id="@+id/delete_benef_acc_num_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Account number"
        android:textSize="18sp"
        android:textColor="@color/light_black"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="@+id/delete_benef_bank_name_tv"
        app:layout_constraintTop_toBottomOf="@+id/delete_benef_bank_name_tv"
        />
    <TextView
        android:id="@+id/delete_benef_acc_num_tv"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/rounded_et"
        android:paddingStart="16dp"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/delete_benef_acc_num_txt"
        app:layout_constraintTop_toBottomOf="@+id/delete_benef_acc_num_txt" />
    <TextView
        android:id="@+id/delete_benef_status_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Beneficary status"
        android:textSize="18sp"
        android:textColor="@color/light_black"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="@+id/delete_benef_acc_num_tv"
        app:layout_constraintTop_toBottomOf="@+id/delete_benef_acc_num_tv"
        />
    <TextView
        android:id="@+id/delete_benef_status_tv"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/rounded_et"
        android:paddingStart="16dp"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/delete_benef_status_txt"
        app:layout_constraintTop_toBottomOf="@+id/delete_benef_status_txt" />
    <androidx.cardview.widget.CardView
        android:id="@+id/delete_benef_card"
        android:layout_width="0dp"
        android:layout_height="52dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@color/light_green"
        app:cardCornerRadius="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="55dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete"
        android:textAllCaps="false"
        android:layout_marginStart="10dp"
        android:textColor="@color/dark_green"
        android:textSize="20sp"
        android:fontFamily="sans-serif-condensed-medium"
        android:layout_gravity="center"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="28dp"
        app:srcCompat="@drawable/delete_ic"
        android:layout_gravity="center"/>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>