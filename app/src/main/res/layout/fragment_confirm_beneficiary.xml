<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/page_color"
    tools:context=".ConfirmBeneficiaryFragment">
    <ImageView
        android:id="@+id/conf_benef_back"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:paddingVertical="2dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/back_ic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/conf_benef_rev_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Review and confirm"
        android:textSize="22sp"
        android:textColor="@color/light_black"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/conf_benef_back"
        app:layout_constraintStart_toEndOf="@+id/conf_benef_back"/>
    <TextView
        android:id="@+id/conf_benef_bank_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BSF Bank"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/light_grey"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@+id/conf_benef_rev_tv"
        app:layout_constraintTop_toBottomOf="@+id/conf_benef_rev_tv"/>
    <TextView
        android:id="@+id/conf_benef_name_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Beneficiary name"
        android:textSize="18sp"
        android:textColor="@color/light_black"
        android:layout_marginTop="25dp"
        app:layout_constraintStart_toStartOf="@+id/conf_benef_back"
        app:layout_constraintTop_toBottomOf="@+id/conf_benef_bank_name_tv"
        />
    <TextView
        android:id="@+id/conf_benef_name_tv"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/rounded_et"
        android:paddingStart="16dp"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/conf_benef_name_txt"
        app:layout_constraintTop_toBottomOf="@+id/conf_benef_name_txt" />
    <TextView
        android:id="@+id/conf_benef_bank_name_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bank name"
        android:textSize="18sp"
        android:textColor="@color/light_black"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="@+id/conf_benef_name_tv"
        app:layout_constraintTop_toBottomOf="@+id/conf_benef_name_tv"
        />
    <TextView
        android:id="@+id/conf_benef_bank_name_show"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/rounded_et"
        android:paddingStart="16dp"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/conf_benef_bank_name_txt"
        app:layout_constraintTop_toBottomOf="@+id/conf_benef_bank_name_txt" />
    <TextView
        android:id="@+id/conf_benef_acc_num_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Account number"
        android:textSize="18sp"
        android:textColor="@color/light_black"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="@+id/conf_benef_bank_name_show"
        app:layout_constraintTop_toBottomOf="@+id/conf_benef_bank_name_show"
        />
    <TextView
        android:id="@+id/conf_benef_acc_num_show"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/rounded_et"
        android:paddingStart="16dp"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/conf_benef_acc_num_txt"
        app:layout_constraintTop_toBottomOf="@+id/conf_benef_acc_num_txt" />
    <TextView
        android:id="@+id/conf_benef_iban_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="IBAN"
        android:textSize="18sp"
        android:textColor="@color/light_black"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="@+id/conf_benef_acc_num_show"
        app:layout_constraintTop_toBottomOf="@+id/conf_benef_acc_num_show"
        />
    <TextView
        android:id="@+id/conf_benef_iban_show"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/rounded_et"
        android:paddingStart="16dp"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/conf_benef_iban_txt"
        app:layout_constraintTop_toBottomOf="@+id/conf_benef_iban_txt" />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/confirm_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="55dp"
        android:background="@drawable/tab_indicator"
        android:text="Confirm"
        android:textAllCaps="false"
        android:textColor="@color/dark_green"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />






</androidx.constraintlayout.widget.ConstraintLayout>