<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/page_color"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="0dp"
        android:layout_height="450dp"
        android:background="@drawable/rounded_img"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="16dp"
            android:src="@drawable/logout_ic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="36dp"
            android:layout_marginTop="40dp"
            android:text="Welcome"
            android:textColor="@color/light_green"
            android:textSize="28sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/username_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:text=" Layan Albakran"
            android:textColor="@color/white"
            android:textSize="28sp"
            app:layout_constraintStart_toStartOf="@+id/textView5"
            app:layout_constraintTop_toBottomOf="@+id/textView5" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="405dp"
            android:layout_height="205dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="27dp"
            android:layout_marginBottom="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            >

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:src="@drawable/credit_img"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="1.0" />

            <TextView
                android:id="@+id/account_num_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:layout_marginTop="84dp"
                android:textSize="18sp"
                android:text="**** **** **** 7777"
                app:layout_constraintStart_toStartOf="@+id/imageView3"
                app:layout_constraintTop_toTopOf="@+id/imageView3" />

            <TextView
                android:id="@+id/money_tv"
                android:layout_width="93dp"
                android:layout_height="30dp"
                android:layout_marginTop="48dp"
                android:text="30,000 SAR"
                android:textSize="18sp"
                android:gravity="center"
                app:layout_constraintStart_toStartOf="@+id/account_num_tv"
                app:layout_constraintTop_toBottomOf="@+id/account_num_tv" />

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="23dp"
                android:layout_height="13dp"
                android:layout_marginStart="28dp"
                android:src="@drawable/eye_ic"
                app:layout_constraintBottom_toBottomOf="@+id/money_tv"
                app:layout_constraintStart_toEndOf="@+id/money_tv"
                app:layout_constraintTop_toTopOf="@+id/money_tv" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.cardview.widget.CardView
        android:id="@+id/transaction_card"
        android:layout_width="77dp"
        android:layout_height="90dp"
        android:layout_marginTop="30dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@android:color/transparent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/benefit_card">
        <ImageView
            android:id="@+id/transaction_img"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginTop="2dp"
            android:src="@drawable/transaction_ic"
            android:layout_gravity="center_horizontal"
            />

        <TextView
            android:id="@+id/transaction_tv"
            android:layout_width="77dp"
            android:layout_height="26dp"
            android:layout_gravity="bottom"
            android:gravity="center_horizontal"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="Transactions"
            android:textColor="#3F3F3F"
            android:textSize="14sp" />

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/benefit_card"
        android:layout_width="77dp"
        android:layout_height="90dp"
        android:layout_marginTop="30dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@android:color/transparent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout"
        app:layout_constraintStart_toEndOf="@+id/transaction_card"
        app:layout_constraintEnd_toStartOf="@+id/transfer_card">
        <ImageView
            android:id="@+id/benefit_img"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginTop="2dp"
            android:src="@drawable/benefit_ic"
            android:layout_gravity="center_horizontal"
            />

        <TextView
            android:id="@+id/benefit_tv"
            android:layout_width="77dp"
            android:layout_height="26dp"
            android:layout_gravity="bottom"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="Beneficiaries"
            android:gravity="center_horizontal"
            android:textColor="#3F3F3F"
            android:textSize="14sp" />

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/transfer_card"
        android:layout_width="77dp"
        android:layout_height="90dp"
        android:layout_marginTop="30dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@android:color/transparent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/benefit_card">
        <ImageView
            android:id="@+id/transfer_img"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginTop="2dp"
            android:src="@drawable/transfer_ic"
            android:layout_gravity="center_horizontal"
            />

        <TextView
            android:id="@+id/transfer_tv"
            android:layout_width="77dp"
            android:layout_height="26dp"
            android:layout_gravity="bottom"
            android:gravity="center_horizontal"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="Transfer"
            android:textColor="#3F3F3F"
            android:textSize="14sp" />

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>